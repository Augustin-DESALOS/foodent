<div class="centreuse-jean-loup">
  <div class="container-list">
    <h4>Lundi</h4>
      <div class="dayli-list">
        <div class="image"><%=image_tag(@chosen_breakfast[0]) %><p><%=  %></p></div>
        <div class="image"><%=image_tag(@chosen_pictures[0]) %></div>
        <div class="image"><%=image_tag(@chosen_pictures[1]) %></div>
      </div>
    <h4>Mardi</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[1]) %>
        <%=image_tag(@chosen_pictures[2]) %>
        <%=image_tag(@chosen_pictures[3]) %>
      </div>
    <h4>Mercredi</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[2]) %>
        <%=image_tag(@chosen_pictures[4]) %>
        <%=image_tag(@chosen_pictures[5]) %>
      </div>
    <h4>Jeudi</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[3]) %>
        <%=image_tag(@chosen_pictures[6]) %>
        <%=image_tag(@chosen_pictures[7]) %>
      </div>
    <h4>Vendredi</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[4]) %>
        <%=image_tag(@chosen_pictures[8]) %>
        <%=image_tag(@chosen_pictures[9]) %>
      </div>
    <h4>Samedi</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[5]) %>
        <%=image_tag(@chosen_pictures[10]) %>
        <%=image_tag(@chosen_pictures[11]) %>
      </div>
    <h4>Dimanche</h4>
      <div class="dayli-list">
        <%=image_tag(@chosen_breakfast[6]) %>
        <%=image_tag(@chosen_pictures[12]) %>
        <%=image_tag(@chosen_pictures[13]) %>
        
        <p class="ml-2 mb-0">DIM</p>
      </div>
      <div class="d-flex justify-content-between mt-3 align-items-center">
        <p class="price my-0">PRIX: <%= @chosen_counter/100.to_f %><%= "€" %></p>
        <% if @list_waiting.present? %>
        <%= link_to "Voir ma liste de course", shopping_list_path(current_user.lists.last) %>
        <% else %>
         <%= link_to "Générer ma liste de course", create_list_ingredients_path(@chosen_list) %>
        <% end %>
      </div>
    <p class="price my-0">PRIX: <%= @chosen_counter/100.to_f %><%= "€" %></p>
  </div>
</div>

